<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>新增員工資料</title>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
</head>
<body>

<header>
     <% include ./html.ejs %>
</header>

<div class="form-style-8">
  <h2>添加員工基本資料</h2>
  <form action="/AddNewPersonalData_AddMemberData/" method="POST" onSubmit="return check()">
    <input type="text" name="name" placeholder="員工姓名" />
    <select name="userbrandtitle" placeholder="員工職稱">
		<option value="正職">正職</option><option value="兼職">兼職</option>
	</select>
    <input type="text" name="userbrandname" placeholder="品牌" />
    <input type="text" name="userbrandplace" placeholder="地點" />
    <input type="text" name="usermonthsalary" placeholder="基本底薪" />
    <input type="text" name="userfoodsalary" placeholder="伙食獎金" />
    <input type="text" name="userwithoutsalary" placeholder="全勤獎金" />
    <input type="text" name="usertitlesalary" placeholder="職稱獎金" />
    <input type="text" name="userextrasalary" placeholder="額外獎金" />
    <input type="text" name="userlawsalary" placeholder="勞健保" />
    <input type="submit" value="新增員工基本資料" />
  </form>
</div>
<script>
function check() {
  	if(document.forms[0].name.value=="") {
		alert("未輸入員工姓名");
		return false;
	}else if(document.forms[0].userbrandname.value=="") {
		alert("未輸入品牌名稱");
		return false;
	}else if(document.forms[0].userbrandplace.value=="") {
		alert("未輸入品牌地點");
		return false;
	}else if(document.forms[0].usermonthsalary.value=="") {
		alert("未輸入基本底薪");
		return false;
	}else if(document.forms[0].userfoodsalary.value=="") {
		alert("未輸入伙食獎金");
		return false;
	}else if(document.forms[0].userwithoutsalary.value=="") {
		alert("未輸入全勤獎金");
		return false;
	}else if(document.forms[0].usertitlesalary.value=="") {
		alert("未輸入職稱獎金");
		return false;
	}else if(document.forms[0].userextrasalary.value=="") {
		alert("未輸入額外獎金");
		return false;
	}else if(document.forms[0].userlawsalary.value=="") {
		alert("未輸入勞健保");
		return false;
	}
	// var re = /\s|[　]/g;  //[]裡面是一個全型空白
	// if(re.test(document.forms[0].t1.value)) {
	// 	alert("不能含有全型及半型的空白");
	// 	return false;
	// }
}
</script>
</body>
</html>