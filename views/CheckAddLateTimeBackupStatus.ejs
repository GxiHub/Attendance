<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>CheckAddLateBackupStatus</title>
  <link href="/css/WorkStatus/checkaddlatetimebackupstatus.css" rel="stylesheet" type="text/css">
</head>
<body>
<header>
     <% include ./html.ejs %>
</header>

<div class="CheckAddLate">
		<form action="/PrintMonthSalary_CheckBackupAddLateStatus/" method="GET">
			<select name="checkPeriodYear">
				<option selected value=<%= year %>><%= year %></option>
				<%  for(var i=0; i<3; i++) {%>
				<option value=<%= parseInt(year,10)+i %>><%= parseInt(year,10)+i %></option>
				<% } %>
			</select>
			<select name="checkPeriodMonth">
				<option selected value=<%= month %>><%= month %></option>
				<%  for(var i=1; i<13; i++) {%>
				<%  if(i<10){ i = '0'+i; } %>
				<option value=<%= i %>><%= i %></option>
				<% } %>
			</select>
			<select name="checkName">
			<%  for(var i=0; i<member.length; i++) {%>
				<option value=<%= member[i].name %>><%= member[i].name %></option>
			<% } %>
				<option selected value="全部">全部</option>
			</select>
			<button type="submit">查詢資料</button>
		</form>	
</div> 
<div class='PreCheckAddLate'>
	<ul>
		<li>
		  <span> 唯一碼 </span>
		  <span> 員工碼 </span>
	      <span> 員工姓名 </span>
	      <span> 日期 </span>  
	      <span> 排班時間 </span> 
	      <span> 上班時間 </span> 
	      <span> 加班時數 </span> 
	      <span> 遲到時數 </span> 
	      <span> 計薪確認 </span> 	
	      <span> 比數 </span> 
	    </li>
	</ul>
	</div>   
	<div class='PostCheckAddLate'>
	<%  var index=0;%>     	      	      
	<%  for(var i=0; i<passvariable.length; i++) {%>
	<ul>
		<li>
			  <span><%= passvariable[i].TID %></span>
			  <span><%= passvariable[i].uniID %></span>
		      <span><%= passvariable[i].name %></span>
		      <span><%= passvariable[i].Year +'/'+ passvariable[i].Month +'/'+ passvariable[i].Day %></span>
		      <span><%= passvariable[i].onlinehour +':'+ passvariable[i].onlineminute+'-'+passvariable[i].offlinehour +':'+ passvariable[i].offlineminute %></span>
		      <span><%= passvariable[i].realonlinehour +':'+ passvariable[i].realonlineminute+'-'+ passvariable[i].realofflinehour +':'+ passvariable[i].realofflineminute%></span>
		      <span><%= passvariable[i].addtime %></span>
		      <span><%= passvariable[i].latetime %></span>
		      <span><%= passvariable[i].countcheck %></span>
		      <%
		      	  if(i>=1)
		      	  {
			      	  if(passvariable[i-1].name == passvariable[i].name)
			      	  {
			      	  	index=index+1;
			      	  }
			      	  else
			      	  {
			      	  	index =1;
			      	  }
		      	  }
		      	  else{index =1;}
		      %>
		      <span> <%= index %> </span> 
		</li>
	</ul>
	<% } %>
</div>	

</body>
</html>